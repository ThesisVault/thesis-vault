{
	"preset": "ts-jest",
	"verbose": true,
	"testEnvironment": "node",
	"transform": {
		"^.+\\.ts$": "ts-jest",
		"^.+\\.js$": "babel-jest"
	},
	"transformIgnorePatterns": [
		"/node_modules/(?!superjson)/"
	],
	"moduleNameMapper": {
		"^@/(.*)$": "<rootDir>/src/$1"
	},
	"testMatch": [
		"<rootDir>/**/**/tests/**/*.(spec|test).js?(x)",
		"<rootDir>/**/**/tests/**/*.(spec|test).ts?(x)"
	],
	"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
	"testTimeout": 30000
}
